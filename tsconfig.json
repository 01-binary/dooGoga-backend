{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "./*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}